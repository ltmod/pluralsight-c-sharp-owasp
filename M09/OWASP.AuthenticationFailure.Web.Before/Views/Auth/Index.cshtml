@model dynamic

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<div class="row">
    <div class="col-md-6 offset-3">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Login</h5>
                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger" role="alert">
                        @ViewBag.Error
                    </div>
                }
                <form method="post">
                    <label for="inputEmail" class="sr-only">Email address</label>
                    <input type="email" id="inputEmail" name="Username" class="form-control" placeholder="Email address" required autofocus style="margin-bottom: 20px;">
                    <label for="inputPassword" class="sr-only">Password</label>
                    <input type="password" id="inputPassword" name="Password" class="form-control" placeholder="Password" required style="margin-bottom: 20px;">

                    <button class="btn btn-lg btn-primary btn-block" type="submit">Log in</button>

                </form>
                <p>Please contact admin@test.com if you have any issues!</p>
            </div>
        </div>
    </div>
</div>
