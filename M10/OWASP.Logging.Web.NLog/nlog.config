<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      internalLogLevel="Debug"
      internalLogFile="C:\Nlog\logs\internalLog.txt">

	<!---->

	<targets>
		<target xsi:type="Database"
		        name="dbTarget"
		        connectionString="Server=(localdb)\\mssqllocaldb;Database=OWASP.Logging;Trusted_Connection=True;MultipleActiveResultSets=true"
		        commandText="INSERT INTO dbo.[Log] (CreatedOn,Message,LogLevel,Exception,StackTrace,Logger,Url) 
							 VALUES (@datetime,@msg,@level,@exception,@trace,@logger,@url)">
			<parameter name="@datetime" layout="${date}" />
			<parameter name="@msg" layout="${message}" />
			<parameter name="@level" layout="${level}" />
			<parameter name="@exception" layout="${exception}" />
			<parameter name="@trace" layout="${stacktrace}" />
			<parameter name="@logger" layout="${logger}" />
			<parameter name="@url" layout="${aspnet-request-url}" />
		</target>
	</targets>
	<rules>
		<logger name="*" minlevel="Trace" writeTo="dbTarget" />
	</rules>
</nlog>